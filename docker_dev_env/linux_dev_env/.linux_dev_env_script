export LINUX_DEV_DIR="$HOME/linux_dev_env"

devup() {
  (cd "$LINUX_DEV_DIR" && docker compose up -d --build)
}

dev() {
  devup
  (cd "$LINUX_DEV_DIR" && docker compose exec dev bash -l)
}

devdown() {
  (cd "$LINUX_DEV_DIR" && docker compose stop)
}

devrm() {
  (cd "$LINUX_DEV_DIR" && docker compose down)
}
